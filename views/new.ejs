<%- include ("./partials/header") %>

<div class="ui container">
    <form class="ui form" action="/books" method="POST">
        <div class="field">
            <label>Book Title</label>
            <input required type="text" name="book[title]">
        </div>
        <div class="field">
            <label>Author</label>
            <input required type="text" name="book[author]">
        </div>
        <div class="field">
            <label>Year published:</label>
            <input required type="number" name="book[year]">
        </div>
        <div class="field">
            <label>Book cover image</label>
            <input required type="url" name="book[image]" placeholder="Copy+paste a url here">
        </div>
        <div class="field">
            <label>Write a summery</label>
            <textarea required name="book[summary]" id="" cols="30" rows="10" class="field"></textarea>
        </div>
        <button class="ui button" type="submit">Submit</button>
    </form>
</div>

<%- include ("./partials/footer") %>