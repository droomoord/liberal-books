<%- include ("./partials/header") %>

<div class="ui container">
    <form class="ui form" action="/books/<%= book._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Book Title</label>
            <input required type="text" name="book[title]" value="<%= book.title %>">
        </div>
        <div class="field">
            <label>Author</label>
            <input required type="text" name="book[author]" value="<%= book.author %>">
        </div>
        <div class="field">
            <label>Year published:</label>
            <input required type="number" name="book[year]" value="<%= book.year %>">
        </div>
        <div class="field">
            <label>Book cover image</label>
            <input required type="url" name="book[image]" placeholder="Copy+paste a url here" value="<%= book.image %>">
        </div>
        <div class="field">
            <label>Write a summery</label>
            <textarea required name="book[summary]" id="" cols="30" rows="10" class="field"><%= book.summary %></textarea>
        </div>
        <button class="ui green basic button" type="submit">Save</button> <a class="ui basic red button" href="/books/<%= book._id %>">Cancel</a>
    </form>
</div>

<%- include ("./partials/footer") %>